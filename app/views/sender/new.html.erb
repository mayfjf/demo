<%= stylesheet_link_tag "zone" %>
<body>

<div id="header">
<h1>Create New Sender Record</h1>
</div>

<div id="section"><center>


<%= form_for(:sender, :url => {:controller => 'sender', :action => 'create'}) do |f| %>
  
 
  <table class="tableContainer" cellspacing="80px">   
  <tr  style="outline: thin solid" bgcolor="#C0C0C0">
    <td height="100" width="15%" colspan="2" align="center"><b>Sender ID: </b><br><%= f.text_field :id,:value => "Auto-generated", :readonly => true %> </td>
    <td height="100" width="15%"><b>Name:</b><br><%=f.text_field :name%> </td></tr>
  </table>
     

    <center><br><br><%= f.submit "Submit", class: "btn btn-default" %></center>
  <% end %>
