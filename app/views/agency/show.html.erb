<%= stylesheet_link_tag "zone" %>
<script>


  function makingSure(e) {
   var r = window.confirm("The item that your are trying to delete may be connected to another item in the database. Are you sure you want to delete this item? Deleted items cannot be recovered." );
   if (r==true){
    return true;
   }
   else
   e.preventDefault();
}

</script>
<body>

<div id="header">
<h1>Agency Listings</h1>
</div>

<div id="section"><center>
 

<table class="tableContainer" cellspacing="80px">                 
  <tr  style="outline: thin solid" bgcolor="#C0C0C0" >                           
    <th height="50">ID</th>
    <th height="50">NAME</th>
    <th height="50">HEAD</th>
    <th height="50">PRIORITY NUM</th>
    <th height="50">CONTACT NUM</th>
    <th height="50" colspan="4">RESPONSIBILITIES</th>
   </tr>

<% @a.all.each do |agency| %>
 <tr  style="outline: thin solid" bgcolor="#B0C4DE" >
  <td height="50" width="15%"><%= agency.id %></td>
  <td height="50" width="15%"><%= agency.name %></td>
  <td height="50" width="15%"><%= agency.head%></td>
  <td height="50" width="15%"><%= agency.prioritynum%></td>
  <td height="50" width="15%"><%= agency.contactnum %></td>
  <td height="50" width="15%"><%= agency.reponsibilities%></td>
  
  
  <td><%= button_to "Edit", {:controller => "agency", :action => "edit", :id => agency.id}, {:method=>:post} %></td>
  
  <td height="50" width="25%"></td>
  <td><%= link_to "Delete", agency_delete_path(:agency=>agency.id), method: :delete, class:'btn btn-mini btn-danger', :onclick => "makingSure(event)"%></td>

  </tr>

  
<% end %>
</table>
</div>

