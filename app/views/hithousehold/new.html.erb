<%= stylesheet_link_tag "zone" %>
<body>

<div id="header">
<h1>New Hit Household Record</h1>
</div>

<div id="section"><center>
 
  <%= form_for(:hithousehold, :url => {:controller => 'hithousehold', :action => 'create'}) do |f| %>
  
<table class="tableContainer" cellspacing="80px">   

    <tr  style="outline: thin solid" bgcolor="#C0C0C0">
	    <td height="100" width="15%"><b>HitHousehold ID:</b><br><%= f.text_field :id,:value => "Auto-generated", :readonly => true %> </td>
	    <td height="100" width="15%"><b>Disaster ID:</b><br><%= f.number_field :disaster_id, :value =>@disaster_id, :readonly => true %></td>
		<td height="100" width="15%"><b>Zone ID:</b><br><%=f.number_field :zone_id, :value =>@zone_id, :readonly => true %></td></tr>
		

    <tr  style="outline: thin solid" bgcolor="#C0C0C0">
	    <td height="100" width="15%"><b>Household ID:</b><br><%=f.number_field :household_id, :value =>@household_id, :readonly => true %></td>
	    <%name = Household.find(@household_id)%>
	    <td height="100" width="15%"><b> Household Name:</b><br><%= name.name%></td>
	    <td height="100" width="15%"><b> Status due to Disaster:</b><br><%= f.select :status, options_for_select(%w[Dead Missing Injured Displaced Relocated])%></td>
  

    </tr></table><br><br>
    <center><%= f.submit "Submit", class: "btn btn-default" %></center>
  
   <% end %>
  </div>
</body>
