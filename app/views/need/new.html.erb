<body>

<div id="header">
<h1>Create New Needs Record</h1>
</div>

<div id="section"><center>
 
 <%= form_for(:need, :url => {:controller => 'need', :action => 'create'}) do |f| %>
  
 
    <br>Need ID:<br><%= f.text_field :id,:value => "Auto-generated", :readonly => true %> 
    <br>Priority Number:<br><%=f.number_field :priority%> 
    <br>Code:<br><%=f.number_field :code%><br> 
    <br><%= f.select :agency_id, Agency.all.collect {|p| [ p.name, p.id ] },{:prompt => "Please Select"}%>
    <br>Description:<br><%=f.text_area :description, :cols => 100, :rows => 10%> 
    
    
    
    <br><br><br><%= f.submit "Submit", class: "btn btn-default" %>
  <% end %>


<hr>
    
  </div>
</body>
