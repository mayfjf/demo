<%= stylesheet_link_tag "zone" %>
<body>

<div id="header">
<h1>Create New Household Record</h1>
</div>

<div id="section"><center>


<%= form_for(:household, :url => {:controller => 'household', :action => 'create'}) do |f| %>
  
 
  <table class="tableContainer" cellspacing="80px">   
  <tr  style="outline: thin solid" bgcolor="#C0C0C0">
    <td height="100" width="15%" colspan="2" align="center"><b>Household ID: </b><br><%= f.text_field :id,:value => "Auto-generated", :readonly => true %> </td>
    <td height="100" width="15%"><b>Family Name:</b><br><%=f.text_field :name%> </td></tr>
  </table>
  <table class="tableContainer" cellspacing="80px">   
  <tr  style="outline: thin solid" bgcolor="#C0C0C0">
    <td height="100" width="15%"><b>Head of the Family: </b><br><%= f.select :people_id, People.all.collect {|p| [[p.firstname,p.familyname],p.id ] },{:prompt => "Please Select"}%></td>
    <td height="100" width="15%"><b>Belongs to Zone: </b><br><%= f.select :zone_id, Zone.all.map { |u|[u.name,u.id]}, {:prompt => "Please Select ",  :selected =>@zone_id}%></td> 
    </td>
    <td height="100" width="15%" span="2"><b> Current Condition:</b><br><%= f.select :condition, options_for_select(%w[Please_Select Good Missing Injured Dead Displaced Relocated NON-EXISTENT]) %></td></tr>
  </table>
    

    <center><br><br><%= f.submit "Submit", class: "btn btn-default" %></center>
  <% end %>


<hr>
    
  </div>
</body>
