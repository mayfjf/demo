<%= stylesheet_link_tag "zone" %>
<script>


  function makingSure(e) {
   var r = window.confirm("The item that your are trying to delete may be connected to another item in the database. Are you sure you want to delete this item? Deleted items cannot be recovered." );
   if (r==true){
    return true;
   }
   else
   e.preventDefault();
}

</script>

<body>

<div id="header">
<h1>Affected Zone Listings</h1>
</div>

<div id="section"><center>
 


<table class="tableContainer" cellspacing="80px">     
<tr>

<td height="50" width = "5%">
  <%= form_tag(hit_index_path, :method => "get", id: "search-form") do %>
  <%= number_field_tag :search, params[:search], placeholder: "Enter Barangay ID here" %>
  <%= submit_tag "Search", :name => nil %>
<% end %></td>

</tr></table><br><br>

<table class="tableContainer" cellspacing="80px">   
                     
  <tr  style="outline: thin solid" bgcolor="#C0C0C0">

    <th height="50">ID</th>
    <th height="50">ZONE ID</th>
    <th height="50">ZONE NAME</th>
    <th height="50"></th>
    <th height="50"></th>
    <th height="50"></th>
    <th height="50"></th>
  </tr>

<% @hit.all.each do |hit| %>
  <tr  style="outline: thin solid" bgcolor="#B0C4DE">
  
  <td height="50" width="25%"><%= hit.id %></td>
  <td height="50" width="25%"><%= hit.zone_id %></td>
  <%@zo = Zone.joins(:hit).where(['hits.zone_id = ?',hit.zone_id])%>
  <td height="50" width="25%" align="center"><%=@zo[0].name%></td>
  
  <td><%= button_to "Edit", {:controller => "hit", :action => "edit", :id => hit.id}, {:method=>:post} %></td>
  <td><%= button_to "Open Report",{:controller => "hit", :action => "report", :id => hit.id} , {:method=>:post}%></td>
  <td height="50" width="25%"></td>
  <td><%= link_to "Delete", hit_delete_path(:hit=>hit.id), method: :delete, class:'btn btn-mini btn-danger',:onclick => "makingSure(event)"%></td>
  </tr>

  
<% end %>
</table><br><br><br>

 <%x=@hit.count%>

  <h3>SUMMARY:</h3>
  <table class="tableContainer" cellspacing="80px"> 
<tr  style="outline: thin solid" bgcolor="#C0C0C0" >   
  <td height="50" width="25%"><b>TOTAL NUMBER OF AFFECTED ZONES:</b></td> 
  <td height="50" width="25%"><%=@hit.count%></td></tr>



</table><br><br><center>

  
</div>

